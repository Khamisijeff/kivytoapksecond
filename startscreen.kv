<startscreen>:
    MDFloatLayout:
        MDBoxLayout:
            orientation:'vertical'
            size_hint:0.9,0.3
            pos_hint:{'center_x':0.5,'center_y':0.7}
            MDLabel:
                text:get_display(reshape(' سلام دوست عزیز در این برنامه ما '))
                halign:'center'
                font_name:'bijan.ttf'
                font_size:self.parent.width/20
            MDLabel:
                text:get_display(reshape(' سعی کردیم در مراحل مدیریت ساختمان'))
                #pos_hint:{'center_x':0.5,'center_y':0.5}
                halign:'center'
                font_size:self.parent.width/20
                font_name:'bijan.ttf'

            MDLabel:
                text:get_display(reshape('  در کنار شما باشیم.'))
                font_size:self.parent.width/20
                #pos_hint:{'center_x':0.5,'center_y':0.5}
                halign:'center'
                font_name:'bijan.ttf'
            MDLabel:
                text:get_display(reshape('  جهت شروع ابتدا ثبت نام کنید.'))
                font_size:self.parent.width/20
                halign:'center'
                font_name:'bijan.ttf'
        MDTextButton:
            text:get_display(reshape(' ثبت نام'))
            pos_hint:{'center_x':0.5,'center_y':0.15}
            on_press:root.showaddbuilding()
            font_name:'bijan.ttf'
            font_size:f'{self.parent.width/4}sp'
            theme_text_color:'Custom'
            text_color:'teal'
    MDFloatLayout:
        MDFloatLayout:
            size_hint:1,0.7
            radius:[20]
            id:add_building
            md_bg_color:colors[app.theme_cls.primary_palette]['500']
            pos_hint:{'center_x':0.5,'center_y':0.-1}
            MDIconButton:
                icon:'chevron-triple-down'
                pos_hint:{'center_x':0.48,'center_y':0.95}
                icon_size:'30sp'
                on_press:root.showaddbuilding()
                theme_text_color:'Custom'
                text_color:'white'
            MDGridLayout:
                cols:2
                size_hint:0.8,None
                height:dp(50)
                pos_hint:{'center_x':0.5,'center_y':0.8}
                MDFloatLayout:
                    size_hint_x:0.6
                    MDTextField:
                        id:building_name_input
                        text:''
                        color_mode:'custom'
                        text_color_focus:[1,1,1,0]
                        text_color_normal:[1,1,1,0]
                        on_text:root.ids.building_name_txt.text=get_display(reshape(self.text))
                        pos_hint:{'center_x':0.5,'center_y':0.5}
                    MDLabel:
                        text:''
                        pos_hint:{'center_x':0.5,'center_y':0.5}
                        id:building_name_txt
                        halign:'center'
                        font_name:'bijan.ttf'

                MDLabel:
                    text:get_display(reshape('نام ساختمان:'))
                    halign:'right'
                    font_name:'bijan.ttf'
                    size_hint_x:0.4
            MDGridLayout:
                cols:2
                size_hint:0.8,None
                height:dp(50)
                pos_hint:{'center_x':0.5,'center_y':0.65}
                MDFloatLayout:
                    size_hint_x:0.6
                    MDTextField:
                        id:building_unit_number_input
                        text:''
                        color_mode:'custom'
                        text_color_focus:[1,1,1,0]
                        text_color_normal:[1,1,1,0]
                        on_text:root.ids.building_unit_number_txt.text=get_display(reshape(self.text))
                        pos_hint:{'center_x':0.5,'center_y':0.5}
                    MDLabel:
                        text:''
                        pos_hint:{'center_x':0.5,'center_y':0.5}
                        id:building_unit_number_txt
                        halign:'center'
                        font_name:'bijan.ttf'
                MDLabel:
                    text:get_display(reshape('تعداد واحدها :'))
                    halign:'right'
                    font_name:'bijan.ttf'
                    size_hint_x:0.4
            MDGridLayout:
                cols:2
                size_hint:0.8,None
                height:dp(50)
                pos_hint:{'center_x':0.5,'center_y':0.5}
                MDFloatLayout:
                    size_hint_x:0.6
                    MDTextField:
                        id:building_manager_name
                        text:''
                        color_mode:'custom'
                        text_color_focus:[1,1,1,0]
                        text_color_normal:[1,1,1,0]
                        on_text:root.ids.building_manager_name_txt.text=get_display(reshape(self.text))
                        pos_hint:{'center_x':0.5,'center_y':0.5}
                    MDLabel:
                        text:''
                        pos_hint:{'center_x':0.5,'center_y':0.5}
                        id:building_manager_name_txt
                        halign:'center'
                        font_name:'bijan.ttf'
                MDLabel:
                    text:get_display(reshape('نام مدیر :'))
                    halign:'right'
                    font_name:'bijan.ttf'
                    size_hint_x:0.4
            MDIconButton:
                icon:'database-plus'
                pos_hint:{'center_x':0.1,'center_y':0.1}
                icon_size:'30sp'
                theme_text_color:'Custom'
                text_color:'white'
                on_press:root.createbuilding(root.ids.building_name_txt.text,root.ids.building_manager_name_txt.text,root.ids.building_unit_number_input.text)

